#include <string>
#include <vector>

using namespace std;

int solution(int num) {
    int answer = 0;
    long number = num;
    while(number!=1){
        if(number %2 ==0){      // 짝수
            number = number/2;
        }
        else{                   // 홀수
            number = (number*3) +1;
        }
        if(answer>=500){
            answer = -1;
            break;
        }       
        answer++;
    }
    return answer;
}
