#include <string>
#include <vector>
#include <algorithm>
using namespace std;

long long solution(long long n) {
    long long answer = 0;
    long long a = n;
    long long b;
    vector<long long> c;
    while(a!=0){
        b = a % 10;
        c.push_back(b);
        a = a/10;
    }
    sort(c.begin(), c.end(), greater<int>());
    int j = 1;
	for (int i = 1; i < c.size(); i++) {
		j = j * 10;
	}
	for (int i = 0; i < c.size(); i++) {
		answer += (c[i] * j);
		j = j / 10;
	}
    return answer;
}
